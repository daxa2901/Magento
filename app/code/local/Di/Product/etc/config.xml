<?xml version="1.0" ?>
<config>
	<modules>
		<Di_Product>
			<version>1.0.6</version>
		</Di_Product>
	</modules>
	<admin>
		<routers>
			<product>
				<use>admin</use>
				<args>
					<module>Di_Product</module>
					<frontName>product</frontName>
				</args>
			</product>
		</routers>
	</admin>
	<adminhtml>
		<menu>
			<product module='product'>
				<title>Product</title>
				<sort_order> 40 </sort_order>
				<children>
					<items module='product'>
						<title> Product grid </title>
						<sort_order> 40 </sort_order>
						<action>product/adminhtml_product/index</action>
					</items>
				</children>
			</product>
		</menu>
		<layout>
			<updates>
				<product>
					<file>product.xml</file>
				</product>
			</updates>
		</layout>
	</adminhtml>
	<global>
		<helpers>
			<product>
				<class>Di_Product_Helper</class>
			</product>
		</helpers>
		<blocks>
			<product>
				<class>Di_Product_Block</class>
			</product>
		</blocks>
		<models>
            <product>
                <class>Di_Product_Model</class>
                <resourceModel>product_resource</resourceModel>
            </product>
            <product_resource>
                <class>Di_product_Model_Resource</class>
                <deprecatedNode>product_mysql4</deprecatedNode>
                <entities>
                    <product>
                        <table>product</table>
                    </product>
                </entities>
            </product_resource>
        </models>
        <resources>
			<product_setup>
				<setup>
					<module>Di_Product</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</product_setup>
			<product_write>
				<connection>
					<use>core_write</use>
				</connection>
			</product_write>
			<product_read>
				<connection>
					<use>core_read</use>
				</connection>
			</product_read>
		</resources>
	</global>
</config>