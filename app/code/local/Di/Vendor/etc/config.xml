<?xml version="1.0" ?>
<config>
	<modules>
		<Di_Vendor>
			<version>1.0.2</version>
		</Di_Vendor>
	</modules>
	<admin>
		<routers>
			<vendor>
				<use>admin</use>
				<args>
					<module>Di_Vendor</module>
					<frontName>vendor</frontName>
				</args>
			</vendor>
		</routers>
	</admin>
	<adminhtml>
		<menu>
			<vendor module='vendor'>
				<title>Vendor</title>
				<sort_order> 50 </sort_order>
				<children>
					<items module='vendor'>
						<title> vendor grid </title>
						<sort_order> 40 </sort_order>
						<action>vendor/adminhtml_vendor/index</action>
					</items>
					<vendor_attribute>
						<title>Attribute</title>
						<sort_order>100</sort_order>
						<children>
							<vendor_attribute>
								<title>Manage Attribute</title>
								<sort_order>100</sort_order>
								<action>vendor/adminhtml_vendor_attribute</action>
							</vendor_attribute>
							<vendor_set>
								<title>Manage Attribute Set</title>
								<sort_order>100</sort_order>
								<action>vendor/adminhtml_vendor_set</action>
							</vendor_set>
						</children>
					</vendor_attribute>
				</children>
			</vendor>
		</menu>
		<layout>
			<updates>
				<vendor>
					<file>vendor.xml</file>
				</vendor>
			</updates>
		</layout>
	</adminhtml>
	<global>
		<helpers>
			<vendor>
				<class>Di_Vendor_Helper</class>
			</vendor>
		</helpers>
		<blocks>
			<vendor>
				<class>Di_vendor_Block</class>
			</vendor>
		</blocks>
		<models>
			<vendor>
				<class>Di_Vendor_Model</class>
				<resourceModel>vendor_resource</resourceModel>
			</vendor>
			<vendor_resource>
				<class>Di_Vendor_Model_Resource</class>
				<entities>
					<vendor>
						<table>vendor</table>
					</vendor>
					<vendor_decimal>
						<table>vendor_decimal</table>
					</vendor_decimal>
					<vendor_datetime>
						<table>vendor_datetime</table>
					</vendor_datetime>
					<vendor_int>
						<table>vendor_int</table>
					</vendor_int>
					<vendor_varchar>
						<table>vendor_varchar</table>
					</vendor_varchar>
					<vendor_text>
						<table>vendor_text</table>
					</vendor_text>
					<vendor_char>
						<table>vendor_char</table>
					</vendor_char>
				</entities>
			</vendor_resource>
		</models>
		<resources>
			<vendor_setup>
				<setup>
					<module>Di_Vendor</module>
					<class>Di_Vendor_Model_Resource_Setup</class>
				</setup>
			</vendor_setup>
		</resources>
	</global>
</config> 	